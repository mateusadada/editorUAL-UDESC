prog Algoritmo190

     int i, idade, sexo;
     string nome;
     
     para (i <- 1 ; i <= 4; i++)
     {
          imprima "\nDigite um nome: ";
          leia nome;
          
          imprima "Digite a idade: ";
          leia idade;
          
          imprima "Digite o sexo (0-fem. 1-mas.): ";
          leia sexo;
          
          se ((sexo == 1) && (idade > 21))
          {
                imprima "Nome: ", nome, "\n";
          }
     }

     imprima "\n\n";
fimprog